  <p class="flash">
    <%= flash[:create] %>
  </p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'books/list', book: @book %>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <tbale class="table">
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag @user, :profile_image, size: '40x40', format: 'jpeg', fallback:"no_image.jpg" %><br>
                    <%= link_to user_path(book.user) do %>
                    <%= book.user.name %>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book.title,book_path(book.user.id) %>
                </td>
                <td><%= book.body %></td>
                <% if book.user.id == current_user.id %>
                  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                  <td><%= link_to "Destroy",book_path(book.id), method: :delete %></td><br>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </tbale>
      </div>
    </div>
  </div>